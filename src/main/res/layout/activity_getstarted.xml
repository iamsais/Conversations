<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/new_launcher_foreground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/opensans_extrabold"
                    android:gravity="left"
                    android:padding="20dp"
                    android:text="Mingl brings the world together, wherever you are."
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:textColor="@color/grey900" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:gravity="bottom">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/getstarted_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/getstarted"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/button_bg_pink"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            android:text="Get Started"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:textColor="@color/white"
                            android:fontFamily="@font/opensans_bold"
                            android:layout_marginBottom="10dp"/>

                        <Button
                            android:id="@+id/sign_in"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/getstarted"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/button_bg_white"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            android:text="Sign In"
                            android:fontFamily="@font/opensans_bold"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:textColor="@color/grey900" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</layout>